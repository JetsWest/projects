
import java.util.Scanner;

public class Game {
    public static void main(String[] args){
        Game();     
        
    }
    public static void playAgain(){
        System.out.println("Play again?");
        System.out.println("1) Yes");
        System.out.println("2) No");
        Scanner scanner = new Scanner(System.in); 
        int choice = scanner.nextInt();
        if (choice == 1){
            System.out.println("Loading...");
            Game();
        }
        if (choice == 2){
            System.out.println("Ok, quitting...");
            System.exit(0);
        }
    }
    public static void Game(){
        boolean playing = true;
        Scanner scanner = new Scanner(System.in); 
        System.out.println("start");
        System.out.println("Sample text");
        double canteen = 5;
        double camelwear = 5;
        int nativedistance = -20;
        int distancetraveled = 0;
        double thirst = 5;
        
        while(playing){
            
            System.out.println("You can ");
            System.out.println("1) Drink ");
            System.out.println("2) Travel full speed");
            System.out.println("3) Travel half speed");
            System.out.println("4) Stop and rest");
            System.out.println("5) Status check");
            System.out.println("6) Quit");
            
            int oasischance = 0;
            int choice = scanner.nextInt();
            if(choice == 1){
                canteen--;
                thirst++;
                nativedistance = nativedistance + (int)(Math.random()*6) + 6;
            }else if(choice == 2){
                camelwear--;
                nativedistance = nativedistance + (int)(Math.random()*6) + 6;
                distancetraveled = distancetraveled + (int)(Math.random()*6) + 12;
                thirst--;
            }else if(choice == 3){
                camelwear = camelwear - 0.5;
                nativedistance = nativedistance + (int)(Math.random()*6) + 6;
                distancetraveled = distancetraveled + (int)(Math.random()*6) + 6;
                thirst = thirst - 0.5;
            }else if(choice == 4){
                camelwear++;
                nativedistance = nativedistance + (int)(Math.random()*6) + 6;
            }else if(choice == 5){
                System.out.println("Your canteen has " + canteen + " drinks left in it.");
                System.out.println("Your camel is at " + (camelwear * 20) + "%");
                System.out.println("You have traveled " + distancetraveled + " miles.");
                System.out.println("The natives are " + (distancetraveled-nativedistance) + " miles away.");
                System.out.println("Your thirst level is at " + thirst + ".");
            }else if(choice == 6){
                System.out.println("You quit");
                System.exit(0);
                        
            }
            
            if(choice == 2){
                oasis = (int) (Math.random()*9) + 1;
                if(oasis == 2){
                    System.out.println("You found an oasis!");
                    while(cateen != 5){
                        canteen++;
                    }
                    System.out.println("Your canteen was filled!");
                }
            }else if(choice == 3){
                oasis = (int) (Math.random()*14) + 1;
                if(oasis == 2){
                    System.out.println("You found an oasis!");
                    while(cateen != 5){
                        canteen++;
                    }
                    System.out.println("Your canteen was filled!");
                }
            }
           
            
            if((distancetraveled - nativedistance) <= 12){
                System.out.println("The natives are getting close!");
            }
            if(thirst <= 1){
                System.out.println("You need to drink soon!");
            }
            
            if(camelwear <= 1){
                System.out.println("Your camel needs to rest!");
            }
            
            if(camelwear <= 0 || thirst <= 0 || (distancetraveled - nativedistance) <= 0 || distancetraveled >= 200){
                playing = false;
            }
            
           
        }
        if((distancetraveled - nativedistance) <= 0){
            System.out.println("The natives caught you! You lost.");
            System.out.println("You traveled " + distancetraveled + " miles.");
        }else if(thirst <= 0){
            System.out.println("You died of thirst! You lost.");
            System.out.println("You traveled " + distancetraveled + " miles.");
        }else if(camelwear <= 0){
            System.out.println("Your camel died and the natives caught up to you! You lost.");
            System.out.println("You traveled " + distancetraveled + " miles.");
        }else if(distancetraveled >= 200){
            System.out.println("You made it across the desert! You won!");
        }
        playAgain();
    } 
}
